@{
    var ListOfJobs = (List<Vanhack.DTO.JobDTO>)ViewBag.ListOfJobs;
    var user = (Vanhack.Models.UserModel)ViewBag.User;
    //var companyName = (string)ViewBag.CompanyName;
    //var principalSkill = (string)ViewBag.PrincipalSkill;
}

<div style="padding-left:20px; padding-right:20px; padding-top:10px;">
    <div class="card card-block sameheight-item">
        <div class="title-block">
            <h3 class="title"> Job Discription </h3>
        </div>
        <form>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 form-control-label">Company</label>
                <div class="col-sm-10"> <label>@</label> </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 form-control-label">Position</label>
                <div class="col-sm-10"> <label>@user.Position </label> </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 form-control-label">Skills</label>
                <div class="col-sm-10"> <label>@user.Skills</label> </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 form-control-label">Email</label>
                <div class="col-sm-10"> <label>@user.Email</label> </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 form-control-label">About</label>
                <div class="col-sm-10"> <label>@user.Bio</label> </div>
            </div>

        </form>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-block">
                        <div class="card-title-block">
                            <h3 class="title"> List of possible candidates </h3>
                        </div>
                        <section class="example">
                            <div>
                                <table style="font-size:14px; font:normal" class="table table-condensed table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width:60px;">Company Name/th>
                                            <th style="width:60px;">Position</th>
                                            <th>Position</th>
                                            <th>City/Country</th>
                                            <th>Years of Experience</th>
                                            <th>Published</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ListOfJobs)
            {
                                            <tr>
                                                <th>@item.CompanyName</th>
                                                <th>@item.Position</th>
                                                <th>@item.Position</th>
                                                <th>@item.CityCountry</th>
                                                <th>@item.Published</th>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>